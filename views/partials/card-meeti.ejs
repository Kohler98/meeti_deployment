<div class="card">
    <img src="/uploads/grupos/<%=(meeti.grupo.imagen) ? meeti.grupo.imagen: ''  %>" >
    <div class="card-texto">
        <% moment.locale('es') %>
        <% const fecha =`${meeti.fecha} ${meeti.hora}` %>
        <p class="fecha"><%=moment(fecha).format('LLLL')  %> Horas</p>
        <a href="/meeti/<%= meeti.slug %>">
            <h3><%=meeti.titulo %></h3>
        </a>
        <div class="info-autor">
            <% if(meeti.usuario.imagen){ %>
                <div class="imagen">
                    <img src="/uploads/perfiles/<%=meeti.usuario.imagen  %>" alt="" style="border-radius: 50%;">
                </div>
            <% }else{ %>
            <div class="imagen">
            </div>
            <% } %>
            <div class="informacion">
                <p>Organizado por:</p>
                <p class="autor">Juan Pablo De la torre Valdez</p>
            </div>
        </div>

    </div>
</div>